<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="d">
	<!-- 전체조회 -->
	<select id="dept_list" resultType="dept">
		select * from dept order by deptno
	</select>

	<insert id="dept_ins" parameterType="dept">
		insert into dept values(
		#{deptno},
		#{dname},
		#{loc}
		)
	</insert>
	
	<update id="dept_mod" parameterType="dept">
		update dept set 
		dname = #{dname}, loc = #{loc}
		where deptno = #{deptno}
	</update>
	
	<delete id="dept_del" parameterType="int">
		delete from dept where deptno = #{ delno }
	</delete>
</mapper>












